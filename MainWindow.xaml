<Window x:Class="Power8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        Name="Root" Closed="WindowClosed" Loaded="WindowLoaded"
        WindowStyle="None" ResizeMode="NoResize" Topmost="True"
        AllowsTransparency="False" Background="Transparent" SizeToContent="WidthAndHeight">
    <Button Name="b1" Style="{DynamicResource MainButtonTransparentStyle}" Click="ShowButtonStack">
        <Button.ContextMenu>
            <ContextMenu Name="menu" >
                <MenuItem Name="MWAutoStart" IsCheckable="True" IsChecked="{Binding AutoStartEnabled, Mode=TwoWay}" Style="{DynamicResource ContextMenuItemStyle}"/>
                <MenuItem Name="MWCheckForUpdates" IsCheckable="True" IsChecked="{Binding CheckForUpdatesEnabled, Mode=TwoWay}" Style="{DynamicResource ContextMenuItemStyle}"/>
                <Separator/>
                <MenuItem Name="MWExit" Click="ExitClick" Style="{DynamicResource ContextMenuItemStyle}"/> 
            </ContextMenu>
        </Button.ContextMenu>
    </Button>
</Window>
