<Window x:Class="Power8.Views.WelcomeArrow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome arrow" Name="ArrowWnd" Height="300" Width="300" 
        Background="Transparent" AllowsTransparency="True" 
        WindowStyle="None" ShowInTaskbar="False">
    <Grid >
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="Transparent" Offset="0.297" />
                <GradientStop Color="Black" Offset="1" />
            </RadialGradientBrush>
        </Grid.Background>
        <TextBlock Text="О сё во -->" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20">
            <TextBlock.LayoutTransform>
                <RotateTransform Angle="{Binding ElementName=ArrowWnd, Path=Rotation}"/>
            </TextBlock.LayoutTransform>
        </TextBlock>
    </Grid>
</Window>
