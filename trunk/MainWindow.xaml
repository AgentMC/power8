<Window x:Class="Power8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        Title="Power8" Name="Root"
        Closed="WindowClosed" Loaded="WindowLoaded"
        WindowStyle="None" ResizeMode="NoResize"  Topmost="True"
        AllowsTransparency="False" Background="Transparent" SizeToContent="WidthAndHeight">
    <Button Name="b1" Style="{DynamicResource TransparentButtonStyle}" Click="ShowButtonStack">
        <Button.ContextMenu>
            <ContextMenu Name="menu">
                <MenuItem Header="Auto start" IsCheckable="True" IsChecked="{Binding AutoStartEnabled, Mode=TwoWay}" />
                <MenuItem Header="Check for updates" IsCheckable="True" IsChecked="{Binding CheckForUpdatesEnabled, Mode=TwoWay}" />
                <Separator/>
                <MenuItem Header="Exit" Click="ExitClick"/> 
            </ContextMenu>
        </Button.ContextMenu>
    </Button>
</Window>
