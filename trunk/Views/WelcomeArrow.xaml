<Window x:Class="Power8.Views.WelcomeArrow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome arrow" Name="ArrowWnd" Height="300" Width="300" 
        Background="Transparent" AllowsTransparency="True" 
        WindowStyle="None" ShowInTaskbar="False">
    <Grid Width="100" Height="50" >
    	<Path Data="M0,10L60,15 60,0 90,22.5 60,45 60,30 0,35z" Fill="{StaticResource WhiteSolidBrush}" Stretch="Uniform" Stroke="{DynamicResource BlackBrush}" StrokeThickness="3"/>
    </Grid>
</Window>
