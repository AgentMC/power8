<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Power8.ConfirmPowerActionWindow"
	x:Name="Window"
	Title="Power8" 
	ResizeMode="NoResize" 
	WindowStartupLocation="CenterScreen" 
	HorizontalAlignment="Center" 
	VerticalAlignment="Center" 
	SnapsToDevicePixels="True" 
	SizeToContent="WidthAndHeight"
	 MinWidth="300" 
	 MinHeight="150" Icon="/Power8;component/Images/Power8Logo_Red48x48.ico">

	<Grid x:Name="LayoutRoot" Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<TextBlock x:Name="MessageTextBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
		<StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="1" Orientation="Horizontal">
			<Button x:Name="ConfirmButton" MinWidth="75" Content="Proceed" FontWeight="Bold" HorizontalContentAlignment="Center" IsDefault="True" Click="ConfirmButtonClick"/>
            <Button x:Name="CancelButton" Width="75" MinWidth="72" Content="Cancel" HorizontalContentAlignment="Center" IsCancel="True"  Margin="10,0,0,0" Click="Button_Click"/>
		</StackPanel>
	</Grid>
</Window>